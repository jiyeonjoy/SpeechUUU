<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FifthColor">

    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:background="@drawable/yellowwall">

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/blueCrown"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="155dp"
            android:src="@drawable/bluecrown"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_clickuser"/>



        <TextView
            android:id="@+id/userName"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="최지연"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:layout_below="@+id/userProfile"
            android:textColor="@color/FirstColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="로그아웃"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/setting_btn_circle"
            android:textColor="@color/FourthColor"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="비밀번호 변경"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:background="@drawable/setting_btn_circle"
            android:textStyle="bold"
            android:textColor="@color/FourthColor"/>




    </LinearLayout>


</RelativeLayout>